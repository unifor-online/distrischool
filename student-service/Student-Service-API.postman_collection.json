    {
      "name": "Alunos - CRUD",
      "item": [
        {
          "name": "Criar Aluno",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"aluno_id\", jsonData.id);",
                  "    pm.test(\"Aluno criado com sucesso\", function () {",
                  "        pm.expect(jsonData.id).to.exist;",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"João Victor Amora\",\n  \"dataNascimento\": \"2000-01-15\",\n  \"endereco\": \"Rua das Flores, 123, Fortaleza-CE\",\n  \"contato\": \"85999999999\",\n  \"matricula\": \"2024001\",\n  \"turma\": \"3A\",\n  \"historicoAcademico\": \"Cursou disciplinas de Matemática e Português com bom desempenho. Participou de olimpíadas científicas.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/alunos",
              "host": ["{{base_url}}"],
              "path": ["api", "alunos"]
            },
            "description": "Cria um novo aluno. O histórico acadêmico é automaticamente criptografado."
          },
          "response": []
        },
